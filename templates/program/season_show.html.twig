{% extends 'base.html.twig' %}


{% block title %}Wild Series{% endblock %}


{% block body %}

<div class="media">

        <img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">

        <div class="media-body">

            <h1> {{ program.title }} </h1>
            <p>{{ program.synopsis }}</p>

            <p>Catégorie : {{ program.category.name }}</p>

            <h4>Saison {{season.number}} </h4>
            
            {% if not season.episodes is empty %}
            <p> Liste des épisodes : </p>
                <ul>
                {% for episode in season.episodes %}
                
                    <li>{{episode.number}}. {{episode.title}}</a></li>
                    <p>synopsis:{{ episode.synopsis }}</p>


                {% endfor %}
                </ul>
            {% else %}
            <p>Aucun épisode !</p>
            {% endif %}

        </div>

    </div>

{% endblock %}