{% extends 'base.html.twig' %}

{% block title %}Wild Series{% endblock %}

{% block body %}
<h1 >Les catégories de programme :  </h1>


<div class="row justify-content-center align-items-center">
    {% for category in categories %}
    <div class="col card">
        <div class="card-header text-center"><h4><a href = "{{ path("category_show", { id : category.id }) }}" >{{category.name}}</a></h4></div>
        <div class="card-footer">
             {# <a href="{{ path("category_show", { categoryName : category.name }) }}">Go</a>  #}
        </div>
    </div>
   
</div>
    {% else %}
        Aucune catégorie trouvée.
    {% endfor %}

    <a href="{{ path('app_index') }}">
        Retour à l'accueil
    </a>
{% endblock %}
